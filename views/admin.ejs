<%- include('partials/header') %>

<div class="relative isolate min-h-screen">
    <!-- Fixed Background -->
    <div class="fixed inset-0 -z-50">
        <div class="absolute inset-0 bg-zinc-950"></div>
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-orange-500/5 rounded-full blur-[120px] opacity-20 pointer-events-none"></div>
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[24px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
        <!-- Vignette -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#09090b_100%)] opacity-80 pointer-events-none"></div>
    </div>

    <div class="max-w-6xl mx-auto px-6 py-12">
        <div class="flex items-center justify-between mb-12">
            <div>
                <h1 class="text-3xl font-bold text-white tracking-tight">Admin Dashboard</h1>
                <p class="text-zinc-400 mt-1">Manage your content and projects</p>
            </div>
            <div class="flex items-center gap-3 px-4 py-2 bg-zinc-900/50 border border-zinc-800 rounded-lg backdrop-blur-sm">
                <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                <span class="text-sm text-zinc-400">System Online</span>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Blog Management -->
            <section class="space-y-8">
                <div class="bg-zinc-900/50 border border-zinc-800/50 rounded-2xl p-6 sm:p-8 backdrop-blur-sm shadow-xl shadow-black/10">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="p-2 bg-zinc-800 rounded-lg">
                            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                        </div>
                        <h2 class="text-xl font-bold text-white">New Blog Post</h2>
                    </div>
                    
                    <form action="/admin/post" method="POST" class="space-y-5">
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Title</label>
                            <input type="text" name="title" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Content</label>
                            <textarea name="content" rows="6" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all font-mono text-sm placeholder:text-zinc-700"></textarea>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Image URL (Optional)</label>
                            <input type="text" name="image" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        </div>
                        <button type="submit" class="w-full bg-white text-zinc-950 hover:bg-zinc-200 font-bold py-3 rounded-xl transition-all shadow-lg shadow-orange-500/10">
                            Publish Post
                        </button>
                    </form>
                </div>

                <div class="bg-zinc-900/30 border border-zinc-800/30 rounded-2xl p-6 backdrop-blur-sm">
                    <h3 class="text-sm font-bold text-zinc-400 uppercase tracking-wider mb-4">Recent Posts</h3>
                    <div class="space-y-3">
                        <% posts.forEach(post => { %>
                            <div class="group flex items-center justify-between p-4 bg-zinc-900/50 hover:bg-zinc-800 border border-zinc-800 rounded-xl transition-all">
                                <div class="flex items-center gap-3 overflow-hidden">
                                    <div class="w-1.5 h-1.5 rounded-full bg-orange-500 shrink-0"></div>
                                    <span class="text-white truncate text-sm font-medium"><%= post.title %></span>
                                </div>
                                <div class="flex items-center gap-4 shrink-0">
                                    <span class="text-xs text-zinc-500"><%= new Date(post.created_at).toLocaleDateString() %></span>
                                    <a href="/blog/<%= post.id %>/edit" class="text-xs text-zinc-400 hover:text-white transition-colors opacity-0 group-hover:opacity-100">Edit</a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </section>

            <!-- Project Management -->
            <section class="space-y-8">
                <div class="bg-zinc-900/50 border border-zinc-800/50 rounded-2xl p-6 sm:p-8 backdrop-blur-sm shadow-xl shadow-black/10">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="p-2 bg-zinc-800 rounded-lg">
                            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                        </div>
                        <h2 class="text-xl font-bold text-white">New Project</h2>
                    </div>
                    
                    <form action="/admin/project" method="POST" class="space-y-5">
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Project Title</label>
                            <input type="text" name="title" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Description</label>
                            <textarea name="description" rows="3" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700"></textarea>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Project Link</label>
                            <input type="text" name="link" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Image URL</label>
                            <input type="text" name="image" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        </div>
                        <div class="flex items-center gap-3">
                            <input type="checkbox" name="featured" id="featured" class="w-4 h-4 rounded border-zinc-800 bg-zinc-950 text-orange-500 focus:ring-orange-500/50 focus:ring-offset-0">
                            <label for="featured" class="text-sm text-zinc-400">Mark as Featured</label>
                        </div>
                        <button type="submit" class="w-full bg-zinc-800 hover:bg-zinc-700 text-white font-bold py-3 rounded-xl transition-all border border-zinc-700">
                            Add Project
                        </button>
                    </form>
                </div>

                <div class="bg-zinc-900/30 border border-zinc-800/30 rounded-2xl p-6 backdrop-blur-sm">
                    <h3 class="text-sm font-bold text-zinc-400 uppercase tracking-wider mb-4">Recent Projects</h3>
                    <div class="space-y-3">
                        <% projects.forEach(project => { %>
                            <div class="group flex items-center justify-between p-4 bg-zinc-900/50 hover:bg-zinc-800 border border-zinc-800 rounded-xl transition-all">
                                <div class="flex items-center gap-3 overflow-hidden">
                                    <div class="w-1.5 h-1.5 rounded-full bg-blue-500 shrink-0"></div>
                                    <span class="text-white truncate text-sm font-medium"><%= project.title %></span>
                                </div>
                                <div class="flex items-center gap-3 shrink-0">
                                    <a href="<%= project.link %>" target="_blank" class="text-xs text-zinc-500 hover:text-white transition-colors">View</a>
                                    <a href="/projects/<%= project.id %>/edit" class="text-xs text-zinc-400 hover:text-white transition-colors opacity-0 group-hover:opacity-100">Edit</a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
