<%- include('partials/header') %>

<section class="relative isolate min-h-[80vh] flex items-center justify-center overflow-hidden py-12 sm:py-24">
    <!-- Fixed Background -->
    <div class="fixed inset-0 -z-50">
        <div class="absolute inset-0 bg-zinc-950"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-orange-500/20 rounded-full blur-[120px] opacity-20 pointer-events-none"></div>
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[24px_24px] mask-[radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
        <!-- Vignette -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#09090b_100%)] opacity-80 pointer-events-none"></div>
    </div>

    <div class="w-full max-w-md mx-auto px-6 relative z-10">
        <!-- Logo/Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-zinc-900 border border-zinc-800 mb-6 shadow-lg shadow-orange-500/5">
                <svg class="w-6 h-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
            </div>
            <h1 class="text-2xl font-semibold text-white tracking-tight mb-2">Welcome back</h1>
            <p class="text-zinc-400 text-sm">Sign in to your account to continue</p>
        </div>

        <!-- Login Card -->
        <div class="bg-zinc-900/50 backdrop-blur-xl border border-zinc-800/50 rounded-2xl p-2 shadow-2xl ring-1 ring-white/5">
            <div class="p-6 sm:p-8">
                <% if (user) { %>
                    <div class="text-center py-4">
                        <div class="w-16 h-16 rounded-full bg-zinc-800 mx-auto mb-4 flex items-center justify-center border border-zinc-700">
                            <span class="text-xl font-medium text-white"><%= (user.username || user.email || '?').charAt(0).toUpperCase() %></span>
                        </div>
                        <p class="text-zinc-300 font-medium mb-1">
                            Signed in as <span class="text-white"><%= user.username || user.email %></span>
                        </p>
                        <p class="text-xs text-zinc-500 mb-8">Select an action below</p>
                        
                        <div class="space-y-3">
                            <a href="/" class="block w-full py-2.5 rounded-lg bg-white text-zinc-950 font-medium text-sm hover:bg-zinc-200 transition-colors">
                                Go to Dashboard
                            </a>
                            <a href="/logout" class="block w-full py-2.5 rounded-lg bg-zinc-800 text-zinc-300 font-medium text-sm hover:bg-zinc-700 transition-colors border border-zinc-700/50">
                                Sign out
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <% const hasProviders = googleEnabled || githubEnabled; %>
                    
                    <% if (hasProviders) { %>
                        <div class="space-y-4">
                            <% if (githubEnabled) { %>
                                <a href="/auth/github" class="group flex items-center justify-center gap-3 w-full px-4 py-3 rounded-lg bg-[#24292F] hover:bg-[#24292F]/90 text-white font-medium text-sm transition-all shadow-lg shadow-black/20 border border-transparent hover:scale-[1.02] active:scale-[0.98]">
                                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" aria-hidden="true">
                                        <path d="M12 .5C5.65.5.5 5.65.5 12a11.5 11.5 0 0 0 7.86 10.93c.58.11.79-.25.79-.55v-2.1c-3.2.7-3.87-1.54-3.87-1.54-.53-1.33-1.3-1.69-1.3-1.69-1.07-.74.08-.73.08-.73 1.18.08 1.81 1.22 1.81 1.22 1.05 1.8 2.75 1.28 3.43.98.11-.76.41-1.28.74-1.58-2.55-.29-5.23-1.28-5.23-5.68 0-1.25.45-2.27 1.2-3.06-.12-.29-.52-1.46.12-3.04 0 0 .97-.31 3.17 1.17a10.9 10.9 0 0 1 5.78 0c2.2-1.48 3.16-1.17 3.16-1.17.64 1.58.24 2.75.12 3.04.75.79 1.2 1.81 1.2 3.06 0 4.41-2.68 5.38-5.24 5.66.42.36.79 1.07.79 2.16v3.2c0 .31.21.67.8.55A11.5 11.5 0 0 0 23.5 12C23.5 5.65 18.35.5 12 .5Z"></path>
                                    </svg>
                                    Continue with GitHub
                                </a>
                            <% } %>
                            
                            <% if (googleEnabled) { %>
                                <a href="/auth/google" class="group flex items-center justify-center gap-3 w-full px-4 py-3 rounded-lg bg-white hover:bg-zinc-50 text-zinc-900 font-medium text-sm transition-all shadow-lg shadow-black/5 border border-transparent hover:scale-[1.02] active:scale-[0.98]">
                                    <svg class="w-5 h-5" viewBox="0 0 24 24" aria-hidden="true">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                                        <path fill="#EA4335" d="M12 4.66c1.6 0 3.04.55 4.19 1.6l3.14-3.14C17.46 1.05 14.98 0 12 0 7.7 0 3.99 2.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                                    </svg>
                                    Continue with Google
                                </a>
                            <% } %>
                        </div>

                        <div class="mt-8 text-center">
                            <div class="relative">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-zinc-800"></div>
                                </div>
                                <div class="relative flex justify-center text-xs uppercase">
                                    <span class="bg-zinc-900 px-2 text-zinc-500">Secured by OAuth</span>
                                </div>
                            </div>
                            <p class="mt-6 text-xs text-zinc-600 max-w-xs mx-auto">
                                By continuing, you agree to CottageIndustries' Terms of Service and Privacy Policy.
                            </p>
                        </div>
                    <% } else { %>
                        <div class="text-center py-8">
                            <div class="mx-auto flex items-center justify-center w-12 h-12 rounded-full bg-red-500/10 mb-4">
                                <svg class="w-6 h-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <h3 class="text-sm font-medium text-red-500 mb-2">Configuration Error</h3>
                            <p class="text-xs text-zinc-500">
                                No OAuth providers configured. Please check your server environment variables.
                            </p>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        
        <!-- Footer Link -->
        <div class="text-center mt-8">
            <a href="/" class="text-xs text-zinc-500 hover:text-zinc-400 transition-colors">
                &larr; Back to home
            </a>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
