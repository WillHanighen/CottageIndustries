<%- include('partials/header') %>

<div class="relative isolate min-h-[80vh] flex items-center justify-center py-12">
    <!-- Fixed Background -->
    <div class="fixed inset-0 -z-50">
        <div class="absolute inset-0 bg-zinc-950"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-orange-500/5 rounded-full blur-[120px] opacity-20 pointer-events-none"></div>
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[24px_24px] mask-[radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
        <!-- Vignette -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#09090b_100%)] opacity-80 pointer-events-none"></div>
    </div>

    <div class="w-full max-w-4xl mx-auto px-6">
        <div class="mb-8 text-center">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-zinc-900/50 border border-zinc-800 text-zinc-400 text-xs font-medium mb-4 backdrop-blur-md">
                <span class="w-2 h-2 rounded-full bg-orange-500 animate-pulse"></span>
                Editing Mode
            </div>
            <h1 class="text-3xl font-bold text-white">Edit <%= type === 'post' ? 'Post' : 'Project' %></h1>
        </div>

        <div class="bg-zinc-900/50 border border-zinc-800/50 rounded-2xl p-6 sm:p-10 backdrop-blur-xl shadow-2xl shadow-black/20">
            <form action="/<%= type === 'post' ? 'blog' : 'projects' %>/<%= item.id %>/edit" method="POST" class="space-y-6">
                <div>
                    <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Title</label>
                    <input type="text" name="title" value="<%= item.title %>" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700 font-medium">
                </div>

                <% if (type === 'post') { %>
                    <div>
                        <div class="flex items-center justify-between mb-1.5">
                            <label class="block text-xs font-medium text-zinc-400 uppercase tracking-wider">Content</label>
                            <span class="text-[10px] text-zinc-500 font-mono">MARKDOWN SUPPORTED</span>
                        </div>
                        <textarea name="content" rows="20" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all font-mono text-sm placeholder:text-zinc-700 leading-relaxed"><%= item.content %></textarea>
                    </div>
                <% } else { %>
                    <div>
                        <div class="flex items-center justify-between mb-1.5">
                            <label class="block text-xs font-medium text-zinc-400 uppercase tracking-wider">Description</label>
                            <span class="text-[10px] text-zinc-500 font-mono">MARKDOWN SUPPORTED</span>
                        </div>
                        <textarea name="description" rows="10" required class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all font-mono text-sm placeholder:text-zinc-700 leading-relaxed"><%= item.description %></textarea>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Project Link</label>
                        <div class="relative">
                            <input type="text" name="link" value="<%= item.link %>" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 pl-10 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                            <svg class="w-4 h-4 text-zinc-600 absolute left-3.5 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
                        </div>
                    </div>
                    <div class="flex items-center gap-3 py-2">
                        <input type="checkbox" name="featured" id="featured" <%= item.featured ? 'checked' : '' %> class="w-4 h-4 rounded border-zinc-800 bg-zinc-950 text-orange-500 focus:ring-orange-500/50 focus:ring-offset-0">
                        <label for="featured" class="text-sm text-zinc-400">Mark as Featured</label>
                    </div>
                <% } %>

                <div>
                    <label class="block text-xs font-medium text-zinc-400 mb-1.5 uppercase tracking-wider">Image URL</label>
                    <div class="relative">
                        <input type="text" name="image" value="<%= item.image %>" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 pl-10 text-white focus:outline-none focus:border-orange-500/50 focus:ring-1 focus:ring-orange-500/50 transition-all placeholder:text-zinc-700">
                        <svg class="w-4 h-4 text-zinc-600 absolute left-3.5 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                    </div>
                </div>

                <div class="pt-4 flex items-center justify-end gap-4">
                    <a href="/<%= type === 'post' ? 'blog' : 'projects' %>/<%= item.id %>" class="px-6 py-2.5 bg-zinc-800/50 hover:bg-zinc-800 text-zinc-300 hover:text-white font-medium rounded-xl transition-all border border-zinc-700/50 hover:border-zinc-700">
                        Cancel
                    </a>
                    <button type="submit" class="px-8 py-2.5 bg-white text-zinc-950 hover:bg-zinc-200 font-bold rounded-xl transition-all shadow-lg shadow-orange-900/5">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
