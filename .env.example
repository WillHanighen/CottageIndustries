# Server Configuration
PORT=3000
SESSION_SECRET=your_super_secret_session_key_change_this
NODE_ENV=development

# Database Configuration
# Optional: Path to the SQLite database file. Defaults to ./database.db
DB_PATH=./database.db

# Admin Access
# Replace this with the email address you will use to log in as admin
ADMIN_EMAIL=your_admin_email@example.com

# Google OAuth
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret

# GitHub OAuth
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=github_client_id
GITHUB_CLIENT_SECRET=github_client_secret

# Cloudflare Turnstile
# Get these from: https://dash.cloudflare.com/
TURNSTILE_SITE_KEY=cloudflare_turnstile_site_key
TURNSTILE_SECRET_KEY=cloudflare_turnstile_secret_key
